extends layout

block content
  div.navbar
    div.navbar-inner
      a.brand(href="#")
      ul.nav
        li.active#chatLink
          a(href="#chat") Chat
        li#aboutLink
          a(href="#about") About
  div.row#content
    div#chat
      a(href='https://github.com/socketstream/socketstream')
        img(src='/images/logo.png', alt='SocketStream Logo', width=160, height=160)
      h1 Welcome to your new realtime app!

      // QUICK CHAT DEMO
      form#demo(onsubmit='return false')
        p.lead Quick Chat Demo
        strong
         p Open this page in multiple tabs or browsers and type a message below
        #chatlog
        input.span8(id='myMessage', type='text', autocomplete='off', placeholder='type a message here')
    div#about(style="display:none;")
      div.hero-unit
        h1 About This Page
